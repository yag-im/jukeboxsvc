{
    "name": "yag-jukeboxsvc",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--name=yag-jukeboxsvc",
        //"--network",
        //"host", // because appstor vms' ssh works only through 127.0.0.1 (required for creating remote clones)
        "--add-host",
        "host.docker.internal:host-gateway",
        "--env-file",
        "${localWorkspaceFolder}/.devcontainer/.env",
        "--env-file",
        "${localWorkspaceFolder}/.devcontainer/secret.env"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.black-formatter",
                "humao.rest-client"
            ]
        }
    },
    "postCreateCommand": ".devcontainer/post-create.sh",
    "appPort": [
        "8083:80"
    ],
    "mounts": [
        "source=${env:HOME}${env:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind",
        "source=/ara/devel/acme/yag/appstor_data,target=/mnt/appstor,type=bind",
        "source=/mnt/appstor_nfs,target=/mnt/appstor_nfs,type=bind"
    ]
}
